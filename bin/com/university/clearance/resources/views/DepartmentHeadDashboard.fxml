<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.clearance.controller.DepartmentHeadDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Department Head Clearance Dashboard" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblWelcome" textFill="WHITE" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label fx:id="lblPendingCount" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Pending Department Clearances: 0" />
                    <Button onAction="#generateDepartmentReport" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“Š Generate Report" />
                    <Button onAction="#refreshRequests" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ”„ Refresh" />
                    <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸšª Logout" />
                </HBox>
            </children>
        </HBox>
    </top>
    
    <left>
        <VBox minWidth="220" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <children>
                <!-- Clearance Actions -->
                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="DEPARTMENT ACTIONS" />
                <Button onAction="#refreshRequests" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200;" text="Refresh Requests" />
                
                <!-- Quick Reports -->
                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="QUICK REPORTS" />
                <Button onAction="#generateDepartmentReport" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 200;" text="Student Report" />
                <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 200; -fx-font-weight: bold;" text="Logout" />
                
            </children>
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" style="-fx-padding: 10;" tabClosingPolicy="UNAVAILABLE">
            
            <!-- Dashboard Home Tab -->
            <Tab style="-fx-pref-width: 100; -fx-background-color: #3498db; -fx-pref-width: 100; -fx-pref-height: 30;" text="Dashboard">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Department Head Clearance Overview" />
                        
                        <!-- Status Cards -->
                        <HBox spacing="20">
                            <VBox prefWidth="250" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;">
                                <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Pending Clearances" />
                                <Label fx:id="lblPendingCard" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
                            </VBox>
                            
                            <VBox prefWidth="250" style="-fx-background-color: #2ecc71; -fx-padding: 20; -fx-background-radius: 10;">
                                <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Cleared Students" />
                                <Label fx:id="lblApprovedCard" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
                            </VBox>
                            
                            <VBox prefWidth="250" style="-fx-background-color: #e74c3c; -fx-padding: 20; -fx-background-radius: 10;">
                                <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Requirements Pending" />
                                <Label fx:id="lblRequirementsCard" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
                            </VBox>
                        </HBox>
                        
                        <!-- Quick Actions -->
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Quick Actions" />
                            <HBox spacing="10">
                                <Button onAction="#refreshRequests" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Refresh All" />
                                <Button onAction="#generateDepartmentReport" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Generate Report" />
                            </HBox>
                            <Label fx:id="lblStudentInfo" style="-fx-text-fill: #7f8c8d; -fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5;" text="Select a student to view department requirements" />
                            <Label fx:id="lblDepartmentRequirements" style="-fx-text-fill: #2c3e50; -fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;" text="Requirements summary will appear here" />
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Clearance Requests Tab -->
            <Tab style="-fx-background-color: #3498db; -fx-pref-width: 120; -fx-pref-height: 30;" text="Clearance Requests">
                <VBox spacing="15">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Pending Department Clearances" />
                    </HBox>
                    
                    <!-- Clearance Requests Table -->
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colStudentId" prefWidth="100" text="Student ID" />
                            <TableColumn fx:id="colStudentName" prefWidth="150" text="Student Name" />
                            <TableColumn fx:id="colDepartment" prefWidth="120" text="Department" />
                            <TableColumn fx:id="colYearLevel" prefWidth="80" text="Year Level" />
                            <TableColumn fx:id="colGPA" prefWidth="80" text="GPA" />
                            <TableColumn fx:id="colDepartmentStatus" prefWidth="200" text="Department Status" />
                            <TableColumn fx:id="colRequestDate" prefWidth="120" text="Request Date" />
                            <TableColumn fx:id="colActions" prefWidth="280" text="Actions" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Table Info -->
                    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="Click 'Requirements' to see detailed requirements below" />
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Department Requirements Tab -->
            <Tab style="-fx-pref-width: 160; -fx-background-color: #3498db; -fx-pref-height: 30;" text="Department Requirements">
                <VBox spacing="15">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Student Department Requirements" />
                    </HBox>
                    
                    <!-- Instructions -->
                    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f4f8; -fx-background-radius: 5;">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" text="Instructions:" />
                        <Label style="-fx-text-fill: #2c3e50;" text="1. Select a student from the Clearance Requests tab" />
                        <Label style="-fx-text-fill: #2c3e50;" text="2. Click 'Requirements' to see their department requirements" />
                        <Label style="-fx-text-fill: #2c3e50;" text="3. Use Approve/Reject buttons in Clearance Requests tab" />
                        <Label style="-fx-text-fill: #2c3e50;" text="4. Check requirements status and remarks for each item" />
                    </VBox>
                    
                    <!-- Requirements Table -->
                    <TableView fx:id="tableRequirements" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colRequirement" prefWidth="200" text="Requirement" />
                            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                            <TableColumn fx:id="colCompletedDate" prefWidth="120" text="Completed Date" />
                            <TableColumn fx:id="colRemarks" prefWidth="200" text="Remarks" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Status Legend -->
                    <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label style="-fx-font-weight: bold;" text="Status Colors:" />
                        <HBox spacing="5">
                            <Label style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" text="â—" />
                            <Label text="Completed" />
                        </HBox>
                        <HBox spacing="5">
                            <Label style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" text="â—" />
                            <Label text="In Progress" />
                        </HBox>
                        <HBox spacing="5">
                            <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" text="â—" />
                            <Label text="Not Started" />
                        </HBox>
                    </HBox>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>
