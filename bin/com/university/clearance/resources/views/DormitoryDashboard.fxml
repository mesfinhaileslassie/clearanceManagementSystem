<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.university.clearance.controller.DormitoryDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label fx:id="lblWelcome" text="Welcome to Dormitory Dashboard" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblPendingCount" text="Pending Clearances: 0" style="-fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;" minWidth="200">
            <Label text="ACTIONS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
            <Button onAction="#refreshRequests" text="ðŸ”„ Refresh" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button onAction="#createTestData" text="âž• Test Data" 
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button onAction="#generateDormitoryReport" text="ðŸ“Š Generate Report" 
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" />
            
            <Separator style="-fx-padding: 10 0;" />
            
            <Label text="STATUS GUIDE" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1);">
                <HBox spacing="5">
                    <Label text="â—" style="-fx-text-fill: #27ae60;" />
                    <Label text="No Issues" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                </HBox>
                <HBox spacing="5">
                    <Label text="â—" style="-fx-text-fill: #f39c12;" />
                    <Label text="Minor Issues" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                </HBox>
                <HBox spacing="5">
                    <Label text="â—" style="-fx-text-fill: #e74c3c;" />
                    <Label text="Major Issues" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                </HBox>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" style="-fx-padding: 10;">
            
            <Tab text="Dashboard">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Dormitory Clearance Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                        
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label fx:id="lblStudentInfo" text="Select a student to view details" 
                                   style="-fx-text-fill: #7f8c8d;" />
                            <Label fx:id="lblDormitoryStatus" text="Dormitory status will appear here"
                                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <Tab text="Clearance Requests">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Pending Dormitory Clearances" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100" />
                            <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="150" />
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120" />
                            <TableColumn fx:id="colRoomNumber" text="Room" prefWidth="80" />
                            <TableColumn fx:id="colDormitoryStatus" text="Dormitory Status" prefWidth="200" />
                            <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120" />
                            <TableColumn fx:id="colActions" text="Actions" prefWidth="250" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>
            
            <Tab text="Dormitory Records">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Student Dormitory Records" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    
                    <TableView fx:id="tableDormitoryRecords" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colRecordType" text="Record Type" prefWidth="120" />
                            <TableColumn fx:id="colDescription" text="Description" prefWidth="250" />
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100" />
                            <TableColumn fx:id="colDueDate" text="Due Date" prefWidth="100" />
                            <TableColumn fx:id="colRecordStatus" text="Status" prefWidth="100" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>