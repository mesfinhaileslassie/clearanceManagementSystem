<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.university.clearance.controller.DormitoryDashboardController">

    <!-- TOP: Header -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label fx:id="lblWelcome" text="Dormitory Office Dashboard" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”„ Refresh All" onAction="#refreshRequests"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- LEFT: Sidebar -->
    <left>
        <VBox spacing="15" prefWidth="200" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <!-- Header -->
            <Label text="ðŸ  DORMITORY OFFICE" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
            
            <!-- Navigation -->
            <VBox spacing="8">
                <Button text="ðŸ“‹ Clearance Requests" onAction="#refreshRequests" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        maxWidth="Infinity"/>
                <Button text="ðŸ  Dormitory Records" onAction="#refreshRequests"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                        maxWidth="Infinity"/>
                <Button text="ðŸ“Š Generate Reports" onAction="#generateDormitoryReport"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"
                        maxWidth="Infinity"/>
                <Button text="âš¡ Quick Actions" onAction="#refreshRequests"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"
                        maxWidth="Infinity"/>
            </VBox>
            
            <!-- Stats -->
            <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Label text="Quick Stats:" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                
                <HBox spacing="10">
                    <VBox alignment="CENTER" spacing="3" 
                          style="-fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-padding: 8;">
                        <Label text="Pending" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                        <Label fx:id="lblDashboardPending" text="0" 
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="3" 
                          style="-fx-background-color: #27ae60; -fx-background-radius: 5; -fx-padding: 8;">
                        <Label text="Cleared" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                        <Label fx:id="lblDashboardCleared" text="0" 
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                
                <!-- Enhanced fees label -->
                <Label fx:id="lblFees" text="Fees: $0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 5; -fx-font-weight: bold;"/>
                
                <Label fx:id="lblPendingCount" text="Pending Clearances: 0" 
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER: Main Content with ENHANCED TABLE HEADERS -->
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="ðŸ“‹ Clearance Requests">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <!-- Table with ENHANCED column headers -->
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <!-- CHANGES: Better column names -->
                            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                            <TableColumn fx:id="colStudentName" text="Full Name" prefWidth="150"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                            <TableColumn fx:id="colRoomNumber" text="Room No." prefWidth="80"/>
                            <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120"/>
                            <TableColumn fx:id="colDormitoryStatus" text="Dormitory Status" prefWidth="150"/>
                            <TableColumn fx:id="colActions" text="Actions" prefWidth="250"/>
                        </columns>
                    </TableView>
                    
                    <!-- Info Labels -->
                    <VBox spacing="5">
                        <Label fx:id="lblStudentInfo" text="Select a student"/>
                        <Label fx:id="lblDormitoryStatus" text="Status will appear here"/>
                    </VBox>
                    
                    <Button text="ðŸ”„ Refresh All" onAction="#refreshRequests"/>
                </VBox>
            </Tab>
            
            <Tab text="ðŸ  Dormitory Records">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="Student Dormitory Records"/>
                    <!-- Table with ENHANCED column headers -->
                    <TableView fx:id="tableDormitoryRecords" prefHeight="400">
                        <columns>
                            <!-- CHANGES: Better column names -->
                            <TableColumn fx:id="colRecordType" text="Record Type" prefWidth="120"/>
                            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
                            <TableColumn fx:id="colDueDate" text="Due Date" prefWidth="100"/>
                            <TableColumn fx:id="colRecordStatus" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            
            <Tab text="Quick Actions">
                <VBox spacing="20" style="-fx-padding: 30;" alignment="CENTER">
                    <Label text="âš¡ Quick Actions" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    
                    <GridPane hgap="20" vgap="20" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>
                        
                        <Button text="ðŸ”„ Refresh All" 
                                onAction="#refreshRequests"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 80;"
                                GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        
                        <Button text="ðŸ“Š Generate Report" 
                                onAction="#generateDormitoryReport"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 80;"
                                GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Button text="ðŸ  View Rooms" 
                                onAction="#refreshRequests"
                                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 80;"
                                GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        
                        <Button text="ðŸ“‹ All Records" 
                                onAction="#refreshRequests"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 80;"
                                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
            </Tab>
        </TabPane>
    </center>

</BorderPane>