<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.university.clearance.controller.RegistrarDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Registrar Clearance Dashboard" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblWelcome" textFill="WHITE" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label fx:id="lblPendingCount" text="Pending Verifications: 0" 
                           style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>
                    <Button text="ðŸ“Š Generate Report" onAction="#generateAcademicReport" 
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </children>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;" minWidth="220">
            <children>
                <!-- Clearance Actions -->
                <Label text="CLEARANCE ACTIONS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <Button onAction="#refreshRequests" text="Refresh Requests" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200;" />
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Academic Status Guide -->
                <Label text="ACADEMIC STATUS GUIDE" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 5;">
                    <HBox spacing="5">
                        <Label text="â—" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                        <Label text="Approve:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="Academically Clear" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="â—" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                        <Label text="Warning:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="Low GPA" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="â—" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                        <Label text="Reject:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="Holds/Fees/Incomplete" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                </VBox>
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Quick Reports -->
                <Label text="QUICK REPORTS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <Button onAction="#generateAcademicReport" text="Student Report" 
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 200;" />
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Grade Legend -->
                <Label text="GRADE COLOR CODING" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <VBox spacing="3" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 5;">
                    <HBox spacing="5">
                        <Label text="A, A-, B+" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 12px;" />
                        <Label text=": Excellent" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="B, B-, C+" style="-fx-text-fill: #f39c12; -fx-font-weight: bold; -fx-font-size: 12px;" />
                        <Label text=": Good" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="C, C-, D, F" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 12px;" />
                        <Label text=": Below Average" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                </VBox>
                
            </children>
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">
            
            <!-- Dashboard Home Tab -->
            <Tab text="Dashboard">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Registrar Clearance Overview" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        
                        <!-- Status Cards -->
                        <HBox spacing="20">
                            <VBox style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Pending Verifications" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                            
                            <VBox style="-fx-background-color: #2ecc71; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Cleared Students" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                            
                            <VBox style="-fx-background-color: #e74c3c; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Academic Holds" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                        </HBox>
                        
                        <!-- Quick Actions -->
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <HBox spacing="10">
                                <Button onAction="#refreshRequests" text="Refresh All" 
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                                <Button onAction="#generateAcademicReport" text="Generate Report" 
                                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" />
                            </HBox>
                            <Label fx:id="lblStudentInfo" text="Select a student to view academic records" 
                                   style="-fx-text-fill: #7f8c8d; -fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5;" />
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Clearance Requests Tab -->
            <Tab text="Clearance Requests">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pending Academic Clearances" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <!-- Clearance Requests Table -->
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                            <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="150"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                            <TableColumn fx:id="colYearLevel" text="Year Level" prefWidth="80"/>
                            <TableColumn fx:id="colAcademicStatus" text="Academic Status" prefWidth="200"/>
                            <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120"/>
                            <TableColumn fx:id="colActions" text="Actions" prefWidth="250"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Table Info -->
                    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Click 'View Records' to see academic details below" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Academic Records Tab -->
            <Tab text="Academic Records">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Student Academic Records" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <!-- Instructions -->
                    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f4f8; -fx-background-radius: 5;">
                        <Label text="Instructions:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                        <Label text="1. Select a student from the Clearance Requests tab" 
                               style="-fx-text-fill: #2c3e50;" />
                        <Label text="2. Click 'View Records' to see their academic history" 
                               style="-fx-text-fill: #2c3e50;" />
                        <Label text="3. Use Verify/Hold buttons in Clearance Requests tab" 
                               style="-fx-text-fill: #2c3e50;" />
                    </VBox>
                    
                    <!-- Academic Records Table -->
                    <TableView fx:id="tableAcademicRecords" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colCourse" text="Course" prefWidth="200"/>
                            <TableColumn fx:id="colGrade" text="Grade" prefWidth="80"/>
                            <TableColumn fx:id="colCredits" text="Credits" prefWidth="80"/>
                            <TableColumn fx:id="colSemester" text="Semester" prefWidth="120"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Status Legend -->
                    <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Grade Colors:" style="-fx-font-weight: bold;"/>
                        <HBox spacing="5">
                            <Label text="â—" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                            <Label text="A, A-, B+" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="â—" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                            <Label text="B, B-, C+" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="â—" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                            <Label text="C, C-, D, F" />
                        </HBox>
                    </HBox>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>