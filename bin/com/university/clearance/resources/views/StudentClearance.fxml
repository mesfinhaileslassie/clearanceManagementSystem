<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="30" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1.0"
      fx:controller="com.university.clearance.controller.StudentClearanceController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Student Clearance Portal"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Submit Button - Visible only if not submitted -->
    <VBox fx:id="vboxSubmit" visible="false" managed="false" spacing="20" alignment="CENTER">
        <Label text="You have not submitted your clearance request yet."
               style="-fx-font-size: 18px; -fx-text-fill: #e67e22;"/>
        <Button text="SUBMIT CLEARANCE REQUEST NOW"
                onAction="#submitRequest"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                prefWidth="450" prefHeight="80"/>
    </VBox>

    <!-- In Progress Message -->
    <VBox fx:id="vboxInProgress" visible="false" managed="false" spacing="20" alignment="CENTER">
        <Label text="Your clearance request is being processed..."
               style="-fx-font-size: 20px; -fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
        <Label text="Please check 'My Clearance Status' tab for updates."
               style="-fx-font-size: 16px;"/>
    </VBox>

    <!-- FULLY CLEARED - PRINT CERTIFICATE -->
    <VBox fx:id="vboxCleared" visible="false" managed="false" spacing="25" alignment="CENTER">
        <Label text="CONGRATULATIONS!"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
        <Label text="You have been fully cleared by all departments."
               style="-fx-font-size: 20px;"/>
        <Button fx:id="btnPrintCertificate" text="PRINT OFFICIAL CLEARANCE CERTIFICATE"
                onAction="#printCertificate"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
                prefWidth="500" prefHeight="90"/>
    </VBox>

    <Label fx:id="lblMessage" style="-fx-font-size: 16px; -fx-text-fill: red;" wrapText="true"/>
</VBox>