<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.university.clearance.controller.StudentDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Student Dashboard" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" text="Logout" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;" minWidth="200">
            <Label text="ACTIONS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
            
            <Button onAction="#submitClearanceRequest" 
                    text="Submit Request" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 180;" />
            
            <Button onAction="#refreshStatus" 
                    text="Refresh Status" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 180;" />
            
            <Button fx:id="btnGenerateCertificate" onAction="#generateCertificate" 
                    text="Download Certificate" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 180;" />
            
            <Separator style="-fx-padding: 10 0;" />
            
            <Button onAction="#viewProfile" 
                    text="My Profile" 
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 180;" />
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">
            
            <!-- Dashboard Tab -->
            <Tab text="Dashboard">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <!-- Status Display -->
                    <Label fx:id="lblStatusMessage" 
                           wrapText="true"
                           style="-fx-font-size: 16px; -fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 5;" />
                    
                    <!-- Quick Stats -->
                    <HBox spacing="15">
                        <VBox style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 8;" prefWidth="180">
                            <Label text="Departments" style="-fx-text-fill: white;" />
                            <Label text="5 Total" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                        </VBox>
                        
                        <VBox style="-fx-background-color: #2ecc71; -fx-padding: 15; -fx-background-radius: 8;" prefWidth="180">
                            <Label text="Status" style="-fx-text-fill: white;" />
                            <Label text="In Progress" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                        </VBox>
                    </HBox>
                    
                    <!-- Approval Progress -->
                    <VBox spacing="10">
                        <Label text="Approval Progress" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        
                        <TableView fx:id="tableApprovals" prefHeight="350">
                            <columns>
                                <TableColumn fx:id="colDepartment" text="Department" prefWidth="150"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="250"/>
                            </columns>
                        </TableView>
                        
                        <!-- Status Legend -->
                        <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                            <Label text="●" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                            <Label text="Approved" />
                            <Label text="●" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                            <Label text="Pending" />
                            <Label text="●" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                            <Label text="Rejected" />
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>
            
            <!-- Profile Tab -->
            <Tab text="My Profile">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Student Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        
                        <!-- Profile Card -->
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 30; -fx-background-radius: 10;">
                            <Label text="Personal Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            
                            <!-- Profile Details -->
                            <GridPane hgap="20" vgap="15" style="-fx-padding: 20;">
                                <Label text="Student ID:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfileId" style="-fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                
                                <Label text="Full Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfileName" style="-fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                
                                <Label text="Department:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfileDepartment" style="-fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                
                                <Label text="Email:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfileEmail" style="-fx-font-size: 14px;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                
                                <Label text="Year Level:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfileYearLevel" style="-fx-font-size: 14px;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                                
                                <Label text="Phone:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <Label fx:id="lblProfilePhone" style="-fx-font-size: 14px;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                            </GridPane>
                            
                            <!-- Action Buttons -->
                            <HBox spacing="15" style="-fx-padding: 20 0 0 0;">
                                <Button onAction="#changePassword" 
                                        text="Change Password" 
                                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                                
                                <Button onAction="#refreshStatus" 
                                        text="Refresh Data" 
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                            </HBox>
                        </VBox>
                        
                        <!-- Certificate Info -->
                        <VBox spacing="10" style="-fx-background-color: #e8f4f8; -fx-padding: 20; -fx-background-radius: 5;">
                            <Label text="Certificate Information" style="-fx-font-weight: bold;" />
                            <Label text="Once your clearance is fully approved, you can download your certificate in multiple formats:" 
                                   style="-fx-text-fill: #2c3e50;" wrapText="true" />
                            <HBox spacing="20" style="-fx-padding: 10 0;">
                                <VBox spacing="5">
                                    <Label text="PDF Format" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
                                    <Label text="Professional &amp; printable" style="-fx-text-fill: #2c3e50;" />
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="HTML Format" style="-fx-font-weight: bold; -fx-text-fill: #3498db;" />
                                    <Label text="Web viewable format" style="-fx-text-fill: #2c3e50;" />
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="TEXT Format" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                                    <Label text="Simple text file" style="-fx-text-fill: #2c3e50;" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>