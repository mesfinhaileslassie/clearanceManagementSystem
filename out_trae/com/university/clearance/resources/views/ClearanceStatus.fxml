<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="30" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.clearance.controller.ClearanceStatusController">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="MY CLEARANCE STATUS"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label fx:id="lblStudentInfo"
           style="-fx-font-size: 20px; -fx-text-fill: #3498db; -fx-font-weight: bold;"/>

    <Label fx:id="lblOverallStatus"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableApprovals" prefHeight="450">
        <columns>
            <TableColumn fx:id="colDepartment" text="Office/Department" prefWidth="200"/>
            <TableColumn fx:id="colOfficer" text="Officer" prefWidth="200"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
            <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="300"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER">
        <Button text="REFRESH STATUS" onAction="#refreshStatus"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12;"
                prefWidth="250"/>
        <Button fx:id="btnPrint" text="PRINT CERTIFICATE" onAction="#printCertificate"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12;"
                prefWidth="250"/>
    </HBox>

    <Label fx:id="lblMessage" style="-fx-font-size: 16px;" wrapText="true"/>
</VBox>