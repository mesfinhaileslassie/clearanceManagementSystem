                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Clearance Requests Tab -->
            <Tab text="Clearance Requests">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pending Cafeteria Clearances" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <!-- Clearance Requests Table -->
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                            <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="150"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                            <TableColumn fx:id="colMealPlan" text="Meal Plan" prefWidth="150"/>
                            <TableColumn fx:id="colCafeteriaStatus" text="Cafeteria Status" prefWidth="200"/>
                            <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120"/>
                            <TableColumn fx:id="colActions" text="Actions" prefWidth="280"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
