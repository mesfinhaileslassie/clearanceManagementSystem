<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.clearance.controller.DashboardController"
      spacing="10">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="UNIVERSITY CLEARANCE SYSTEM" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Pane fx:id="spacer" />
        <Button text="LOGOUT" 
                onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="120"/>
    </HBox>

    <Separator/>

    <TabPane fx:id="tabPane">
        <Tab text="Welcome">
            <VBox spacing="20" style="-fx-padding: 20;" alignment="CENTER">
                <Label text="Welcome to University Clearance System" 
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </VBox>
        </Tab>
    </TabPane>
</VBox>