<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.university.clearance.controller.DormitoryDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <!-- Simplified header -->
            <Label text="Dormitory Dashboard" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="lblWelcome" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblPendingCount" text="Pending: 0" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;" minWidth="200">
            <children>
                <!-- Clearance Actions - SIMPLIFIED -->
                <Label text="ACTIONS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <Button onAction="#refreshRequests" text="Refresh Requests" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 180;" />
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Quick Status Guide -->
                <Label text="STATUS GUIDE" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 5;">
                    <HBox spacing="5">
                        <Label text="●" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                        <Label text="Clear:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="No dormitory issues" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="●" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                        <Label text="Warning:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="Currently resident" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="●" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                        <Label text="Issue:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                        <Label text="Balance/damages" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    </HBox>
                </VBox>
            </children>
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">
            
            <!-- Clearance Requests Tab (MAIN TAB) -->
            <Tab text="Clearance Requests">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pending Dormitory Clearances" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#refreshRequests" text="Refresh" 
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </HBox>
                    
                    <!-- Instructions -->
                    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f4f8; -fx-background-radius: 5;">
                        <Label text="Instructions:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                        <Label text="1. Review each student's dormitory status below" 
                               style="-fx-text-fill: #2c3e50;" />
                        <Label text="2. Click Approve or Reject for each student" 
                               style="-fx-text-fill: #2c3e50;" />
                        <Label text="3. Student dormitory details will show automatically" 
                               style="-fx-text-fill: #2c3e50;" />
                    </VBox>
                    
                    <!-- Clearance Requests Table -->
                    <TableView fx:id="tableRequests" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                            <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="150"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                            <TableColumn fx:id="colDormitoryStatus" text="Dormitory Status" prefWidth="200"/>
                            <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120"/>
                            <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>
            
            <!-- Dormitory Records Tab -->
            <Tab text="Dormitory Records">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Student Dormitory Records" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblDormitoryStatus" text="Select a student from Clearance Requests tab" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
                    </HBox>
                    
                    <!-- Dormitory Records Table -->
                    <TableView fx:id="tableDormitoryRecords" prefHeight="450">
                        <columns>
                            <TableColumn fx:id="colRecordType" text="Record Type" prefWidth="150"/>
                            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
                            <TableColumn fx:id="colDueDate" text="Due Date" prefWidth="100"/>
                            <TableColumn fx:id="colRecordStatus" text="Status" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Status Legend -->
                    <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Status Colors:" style="-fx-font-weight: bold;"/>
                        <HBox spacing="5">
                            <Label text="●" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                            <Label text="Paid/Cleared" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="●" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                            <Label text="Pending" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="●" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                            <Label text="Overdue" />
                        </HBox>
                    </HBox>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>