<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.university.clearance.controller.LibrarianDashboardController"
      spacing="20" style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="10">
        <Label text="ðŸ“š Library Clearance Dashboard" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label fx:id="lblWelcome" text="Welcome, Librarian" 
               style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblPendingCount" text="Pending Clearances: 0" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="ðŸ”„ Refresh Requests" onAction="#refreshRequests"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        
        <Button text="ðŸ“– View Book Details" onAction="#viewBookDetails"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <!-- Clearance Requests Table -->
    <VBox spacing="10">
        <Label text="Pending Clearance Requests" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TableView fx:id="tableRequests" prefHeight="300">
            <columns>
                <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="150"/>
                <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                <TableColumn fx:id="colRequestDate" text="Request Date" prefWidth="120"/>
                <TableColumn fx:id="colBookStatus" text="Book Status" prefWidth="200"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Book Details Section -->
    <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Student Book Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblBookStatus" text="Select a student to view book details" 
                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 5 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;"/>
        </HBox>
        <TableView fx:id="tableBookDetails" prefHeight="200">
            <columns>
                <TableColumn fx:id="colBookTitle" text="Book Title" prefWidth="200"/>
                <TableColumn fx:id="colBorrowDate" text="Borrow Date" prefWidth="100"/>
                <TableColumn fx:id="colDueDate" text="Due Date" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colFine" text="Fine Amount" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Information Section -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-background-radius: 10;">
        <Label text="â„¹ï¸ Library Clearance Guidelines:" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
        <VBox spacing="5">
            <Label text="â€¢ âœ… Approve: Student has no borrowed books or all books returned" 
                   style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
            <Label text="â€¢ âš ï¸ Warning: Student has borrowed books but not overdue" 
                   style="-fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
            <Label text="â€¢ âŒ Reject: Student has overdue books or unpaid fines" 
                   style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
            <Label text="â€¢ Click 'View Book Details' to see specific book information" 
                   style="-fx-text-fill: #2c3e50;"/>
        </VBox>
    </VBox>

</VBox>