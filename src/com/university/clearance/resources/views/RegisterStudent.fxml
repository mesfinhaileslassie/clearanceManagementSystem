<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.clearance.controller.RegisterStudentController">

    <padding><Insets top="40" right="60" bottom="40" left="60"/></padding>

    <Label text="REGISTER NEW STUDENT" 
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator prefWidth="600"/>

    <GridPane hgap="20" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="PRIORITY"/>
            <ColumnConstraints hgrow="PRIORITY"/>
        </columnConstraints>

        <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtStudentId" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtFullName" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtUsername" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="txtPassword" prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtEmail" prefWidth="300" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtPhone" prefWidth="300" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Department:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cmbDepartment" prefWidth="300" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Computer Science"/>
                    <String fx:value="Electrical Engineering"/>
                    <String fx:value="Business Administration"/>
                    <String fx:value="Medicine"/>
                    <String fx:value="Law"/>
                    <String fx:value="Architecture"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Year Level:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cmbYear" prefWidth="300" GridPane.rowIndex="7" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1st Year"/>
                    <String fx:value="2nd Year"/>
                    <String fx:value="3rd Year"/>
                    <String fx:value="4th Year"/>
                    <String fx:value="5th Year"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <HBox spacing="30" alignment="CENTER">
        <Button text="REGISTER STUDENT" 
                onAction="#registerStudent"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                prefWidth="250" prefHeight="60"/>
        
        <Button text="CANCEL" 
                onAction="#closeWindow"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px;"
                prefWidth="150" prefHeight="60"/>
    </HBox>

    <Label fx:id="lblMessage" text="" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
</VBox>