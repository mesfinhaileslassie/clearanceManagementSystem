<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.university.clearance.controller.StudentDashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Student Clearance Dashboard" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblWelcome" textFill="WHITE" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;" minWidth="220">
            <children>
                <!-- Clearance Actions -->
                <Label text="CLEARANCE ACTIONS" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <Button onAction="#submitClearanceRequest" text="Submit Request" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200;" />
                <Button onAction="#refreshStatus" text="Refresh Status" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 200;" />
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Certificate Actions -->
                <Label text="CERTIFICATES" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <Button onAction="#generateCertificate" text="Generate Certificate" 
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 200;" />
                <Button onAction="#generatePDFCertificate" text="Generate PDF" 
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-pref-width: 200;" />
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                <!-- Quick Info -->
                <Label text="INFORMATION" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 5;">
                    <Label text="Departments:" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />
                    <Label text="• Library" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label text="• Cafeteria" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label text="• Dormitory" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label text="• Association" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label text="• Registrar" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label text="• Dept. Head" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                </VBox>
            </children>
        </VBox>
    </left>
    
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">
            
            <!-- Dashboard Home Tab -->
            <Tab text="Dashboard">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Clearance Overview" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        
                        <!-- Status Card -->
                        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label text="Current Status" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            <Label fx:id="lblStatusMessage" text="No clearance request submitted yet." 
                                   wrapText="true" style="-fx-font-size: 16px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 5;" />
                            <HBox spacing="10">
                                <Button fx:id="btnSubmitRequest" text="Submit New Request" 
                                        onAction="#submitClearanceRequest" 
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                <Button fx:id="btnRefresh" text="Refresh" 
                                        onAction="#refreshStatus"
                                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Quick Stats -->
                        <HBox spacing="20">
                            <VBox style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Departments" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="6 Total" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                            
                            <VBox style="-fx-background-color: #2ecc71; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Process Time" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="1-3 Days" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                            
                            <VBox style="-fx-background-color: #9b59b6; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="250">
                                <Label text="Certificate" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                                <Label text="Ready" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
                            </VBox>
                        </HBox>
                        
                        <!-- Process Info -->
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label text="How It Works" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <TextFlow style="-fx-padding: 10;">
                                <Text text="1. Submit your clearance request\n" style="-fx-font-weight: bold;" />
                                <Text text="2. Six departments will review your request\n" style="-fx-font-weight: bold;" />
                                <Text text="3. Track approval progress in real-time\n" style="-fx-font-weight: bold;" />
                                <Text text="4. Generate certificate once fully approved\n" style="-fx-font-weight: bold;" />
                            </TextFlow>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Approval Progress Tab -->
            <Tab text="Approval Progress">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Status Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Department Approvals:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <!-- Approval Status Table -->
                    <TableView fx:id="tableApprovals" prefHeight="500">
                        <columns>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="200"/>
                            <TableColumn fx:id="colOfficer" text="Officer" prefWidth="180"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                            <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="200"/>
                            <TableColumn fx:id="colDate" text="Approval Date" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <!-- Table Info -->
                    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Status Colors:" style="-fx-font-weight: bold;"/>
                        <Label text="Approved" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                        <Label text="Pending" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
                        <Label text="Rejected" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Certificate Tab -->
            <Tab text="Certificates">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Certificate Generation" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        
                        <!-- Certificate Options -->
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 30; -fx-background-radius: 10;">
                            <Label text="Available Certificate Formats" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            
                            <VBox spacing="20" style="-fx-padding: 20;">
                                <!-- PDF Certificate -->
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <VBox alignment="CENTER" style="-fx-background-color: #e74c3c; -fx-padding: 15; -fx-background-radius: 8;">
                                        <Label text="PDF" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                                    </VBox>
                                    <VBox spacing="5">
                                        <Label text="Professional PDF Certificate" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                                        <Label text="High-quality printable format with official university seal" 
                                               style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                                        <Button onAction="#generatePDFCertificate" text="Generate PDF" 
                                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                                    </VBox>
                                </HBox>
                                
                                <!-- Multi-Format Certificate -->
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 8;">
                                        <Label text="Multiple" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                                    </VBox>
                                    <VBox spacing="5">
                                        <Label text="Multiple Format Options" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                                        <Label text="Choose from PDF, HTML, or Text format certificates" 
                                               style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                                        <Button onAction="#generateCertificate" text="Choose Format" 
                                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                                    </VBox>
                                </HBox>
                            </VBox>
                            
                            <!-- Requirements -->
                            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 5;">
                                <Label text="Requirements:" style="-fx-font-weight: bold;" />
                                <Label text="• Clearance must be fully approved by all departments" 
                                       style="-fx-text-fill: #2c3e50;" />
                                <Label text="• Status must show 'FULLY_CLEARED'" 
                                       style="-fx-text-fill: #2c3e50;" />
                                <Label text="• Certificates are saved to your Downloads folder" 
                                       style="-fx-text-fill: #2c3e50;" />
                            </VBox>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Help Tab -->
            <Tab text="Help">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <Label text="Clearance Process Guide" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label text="Frequently Asked Questions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            
                            <VBox spacing="10">
                                <Label text="Q: How long does the clearance process take?" 
                                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Label text="A: Typically 1-3 business days, depending on department response times." 
                                       style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                                
                                <Label text="Q: What happens if my clearance is rejected?" 
                                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Label text="A: You will see the rejection reason in the remarks column and can submit a new request after resolving the issue." 
                                       style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                                
                                <Label text="Q: Can I track individual department approvals?" 
                                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Label text="A: Yes, use the 'Approval Progress' tab to see detailed status for each department." 
                                       style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                                
                                <Label text="Q: How do I get my clearance certificate?" 
                                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Label text="A: Once fully approved, use the 'Certificates' tab to generate your certificate in multiple formats." 
                                       style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                            </VBox>
                        </VBox>
                        
                        <!-- Contact Information -->
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            <Label text="Need Help?" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <Label text="If you encounter issues with your clearance process, please contact:" 
                                   style="-fx-text-fill: #7f8c8d;" wrapText="true" />
                            <Label text="• Registrar Office: registrar@university.edu" 
                                   style="-fx-text-fill: #2c3e50;" />
                            <Label text="• Student Affairs: studentaffairs@university.edu" 
                                   style="-fx-text-fill: #2c3e50;" />
                            <Label text="• IT Support: itsupport@university.edu" 
                                   style="-fx-text-fill: #2c3e50;" />
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>